/* pages/home/home.wxss */

.userInfo {
  display: flex;
  flex-direction: column;
  position:relative;
  top:30rpx;
  margin-top: 40rpx;
}



button[plain] {
  border:0;
}

.userInfo image{
  width:220rpx;
  height:200rpx;
}

.userInfo input {
  width: 100%;
  height: 70rpx;
  font-size:40rpx;
  text-align: center
}

.btns {
  display:flex;
  flex-direction: column;
  margin-top: 80rpx;
}

.btns button{
  border-radius: 30rpx;
  background-color: hsl(120, 87%, 85%);
  margin-top: 20rpx;
  width:70%;
  height:130rpx;
  line-height: 90rpx;
  text-align: center;
  letter-spacing: 5rpx;

  font-size:50rpx;
}


.placeholderStyle {
  color:black;
}
